	 public void diplay_Menu() 
    {
		//		Main Menu Options ------>
		System.out.println("\n..................................................");
		System.out.println("\t\tMain_Menu_Operations");
		System.out.println(".................................................\n");
		System.out.println("1. Retrieving the file names in Ascending order");
		System.out.println("2.Display Option for Business-level operations");
		System.out.println("3. Close the application");
		
		//Declaring variables
				int value;
				boolean Flag;
				
				// Using do-while loop .
				do 
				{
					Scanner sc = new Scanner(System.in);
					Flag = false;
					
					//Try-catch to handle exceptions
					try 
					{
						//User input option
						System.out.println("*****************************************************");
						System.out.println("Enter your choice: ");
						value = Integer.parseInt(sc.nextLine());
						
						//Using Switch case to Perform logic of menu options
						switch(value) 
						{
							case 1:
								System.out.println("Files retriev from the folder path: \n"
													+ Locked_Me_Operations.FILE_DIRECTORY + " are:");
								
								//Calling getFiles method to fetch all files in ascending order
								get_File();
								break;
							case 2:
								//Calling file operation method to entered into file options menu
								file_Operations();
								break;
							case 3:
								System.out.println("Thank you, closing the Application");
								sc.close();
								System.exit(0);
								break;
							default:
								System.out.println("invalid option, Try again!");
								menuFlag = true;
						}
					}
					catch(Exception ex) {
						System.out.println("\tError: You must enter a numeric"
											+ " value from the given Menu\n\t\t***Closing the Application!***");
						sc.close();
					}
						
				}while(menuFlag);
    }
	
     public void get_File() 
